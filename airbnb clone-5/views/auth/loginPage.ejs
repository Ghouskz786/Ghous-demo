<%- include('../partials/head',{title:'login'}) %>
  <body>
    <%- include('../partials/header',{currentPage:currentPage,user:user,isLoggedIn:isLoggedIn})%>
    <div class="flex justify-center h-full "> 
      <div  class="flex flex-col justify-center w-[40vw] p-7 mt-11 shadow-2xl">
        <div class="pl-[10%] mb-[30px] font-bold text-3xl">Enter Your Login Info Here</div>
           <form action="/login" method="post" class="flex flex-col gap-6 " >
        <input type="email" name="userEmail" placeholder="Enter email here" value="<%=oldEmail?oldEmail:''%>" class="border-1 border-solid border-gray-400 h-10" required>
        <input type="password" name="password" placeholder="Enter password here" class="border-1 border-solid border-gray-400 h-10" required>
        <ul class="text-red-600">
        <% if(errors.length!==0){ errors.map((error)=>{%>
           <li><%=error%></li>
       <% })}%>
         </ul>
        <button type="submit" class=" bg-red-600 pt-2 pb-2 cursor-pointer font-bold hover:bg-red-500 text-white">Login</button>
    </form>
    </div>
    </div>

  </body>
</html>
