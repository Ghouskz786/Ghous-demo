<%- include('../partials/head',{title:'Host Home List'}) %> 
<body class="overflow-x-hidden">
<%- include('../partials/header',{currentPage:currentPage,user:user,isLoggedIn:isLoggedIn})%>
 <main class="mt-[5vh] flex flex-col flex-wrap md:flex-col w-[100vw] mb-[10vh]">
  <h1 class="text-4xl text-center text-red-600">Welcome to home</h1>
  <ul
    class="flex gap-7 mt-[30px] justify-center w-[100%] relative z-10 mainStyle"
    style="flex-wrap: wrap"
  >
    <% bodyObj.forEach((homes)=>{ %>
    <li class="flex shadow-2xl min-h-[40vh] flex-col p-[20px] imgStyle z-10">
      <img
        src="/<%=homes.imageUrl%>"
        width="270px"
        alt="house image"
        class="rounded-2xl imgStyle"
      />
      <div class="flex flex-col">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl"><%= homes.houseName %></h1>
          <button class="cursor-pointer">Favourite</button>
        </div>
        <p><%= homes.houseLocation %></p>
        <div class="flex justify-between">
          <p class="text-red-600 font-bold">Rs<%= homes.price %>/night</p>
          <div><i class="fa-solid fa-star"></i> 5/<%=homes.rating%></div>
        </div>
        <div class="flex justify-between pt-2">

          <a href='/admin/edit-home/<%= homes._id %>?edit-home=true' class="cursor-pointer bg-blue-500 px-2.5">Edit</a>
          <form action="/admin/delete-home" method="POST">
          <input name="id" type="hidden" value="<%= homes._id %>">
          <button type="submit" class="cursor-pointer bg-red-500">Delete</button>
          </form>
        </div>
      </div>
    </li>
    <% }) %>
  </ul>
</main>

<%- include('../partials/footer') %>
</body>
</html>